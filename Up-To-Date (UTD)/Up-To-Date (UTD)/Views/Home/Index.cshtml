@{
    ViewData["Title"] = "Welcome to UTD - Up-To-Date News Aggregator";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #eee; 
            font-family: Georgia, sans-serif;
        }

        .header {
            background-color: #DCDCDC; 
            color: #333;
            padding: 50px 0;
        }

        .header h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .header p {
            font-size: 1.2rem;
            margin-top: 10px;
        }

        .card {
            margin: 20px 0;
            border: none;
            border-radius: 15px;
            overflow: hidden;
            background-color: #fff;
        }

        .card h2 {
            color: #6c757d; 
        }

        .card-body {
            padding: 30px;
        }

        .card-body p {
            font-size: 1.1rem;
            color: #555;
        }

        .btn-expand {
            background-color: transparent;
            color: #6c757d;
            border: 1px solid #6c757d;
            transition: background-color 0.3s, transform 0.3s;
            font-size: 0.9rem;
            padding: 10px 20px;
            border-radius: 30px;
        }

        .btn-expand:hover {
            background-color: #6c757d; 
            color: white;
            transform: scale(1.05); 
        }

        .list-group-item {
            border: none;
            padding: 15px;
            font-size: 1.05rem;
            color: #333;
        }

        .list-group-item:not(:last-child) {
            border-bottom: 1px solid #f0f0f0; 
        }

        .expandable-content {
            display: none;
            margin-top: 15px;
            animation: fadeIn 0.5s ease;
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @@media (max-width: 768px) {
            .header h1 {
                font-size: 2.5rem;
            }

            .header p {
                font-size: 1rem;
            }

            .card-body {
                padding: 20px;
            }
        }
    </style>
</head>
<body>
    <header class="header text-center">
        <h1>Welcome to UTD</h1>
        <p>Stay updated with the latest news from around the world.</p>
    </header>

    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2>Latest News</h2>
                <p class="mb-2">Get the latest updates in technology, sports, politics, and more.</p>
                <button class="btn btn-expand" onclick="toggleContent('newsContent1')">Expand News Section</button>
                <div id="newsContent1" class="expandable-content">
                    <ul class="list-group mt-3">
                        <li class="list-group-item">Tech Giants Release New Products - Explore the latest innovations in tech.</li>
                        <li class="list-group-item">Sports Updates - Catch up with your favorite teams and players.</li>
                        <li class="list-group-item">Political Insights - Understand the latest developments in politics.</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <h2>Trending Topics</h2>
                <p class="mb-2">Discover what's trending in various categories.</p>
                <button class="btn btn-expand" onclick="toggleContent('trendingContent1')">Expand Trending Section</button>
                <div id="trendingContent1" class="expandable-content">
                    <ul class="list-group mt-3">
                        <li class="list-group-item">Artificial Intelligence - Latest advancements and applications.</li>
                        <li class="list-group-item">Climate Change - Ongoing discussions and solutions.</li>
                        <li class="list-group-item">Health and Wellness - Tips for a healthier lifestyle.</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <h2>User Contributions</h2>
                <p class="mb-2">See the latest articles contributed by our users.</p>
                <button class="btn btn-expand" onclick="toggleContent('contributionsContent1')">Expand Contributions Section</button>
                <div id="contributionsContent1" class="expandable-content">
                    <ul class="list-group mt-3">
                        <li class="list-group-item">User Article 1 - Insights on global warming.</li>
                        <li class="list-group-item">User Article 2 - Innovations in health technology.</li>
                        <li class="list-group-item">User Article 3 - Sports event analysis.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleContent(contentId) {
            var content = document.getElementById(contentId);
            if (content.style.display === "none" || content.style.display === "") {
                content.style.display = "block";
            } else {
                content.style.display = "none";
            }
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
