@model Up_To_Date__UTD_.Models.News

@{
    ViewData["Title"] = "Create News";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5 text-secondary">@ViewData["Title"]</h1>
        <p class="lead">Fill in the details to add a new news entry.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0" style="background-color: #f8f9fa;">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="NewsHeading" class="form-label fw-bold text-secondary">News Heading</label>
                            <textarea asp-for="NewsHeading" class="form-control" rows="2" placeholder="Enter a catchy headline..."></textarea>
                            <span asp-validation-for="NewsHeading" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NewsDescription" class="form-label fw-bold text-secondary">News Description</label>
                            <textarea asp-for="NewsDescription" class="form-control" rows="5" placeholder="Provide a detailed description..."></textarea>
                            <span asp-validation-for="NewsDescription" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-outline-primary px-4 py-2">Create</button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
