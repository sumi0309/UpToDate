<h4 class="text-center">Find Your Interest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">
            <div class="form-group mb-4">
                <label for="SearchPhrase" class="control-label"></label>
                <input name="SearchPhrase" class="form-control input-group" />
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="Search news" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary btn-sm">Back to news feed</a>
</div>