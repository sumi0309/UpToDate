<h4 class="text-center mb-4">Find Your Interest</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="ShowSearchResults" class="p-4 border rounded shadow-sm" style="background-color: #f8f9fa;">
            <div class="form-group mb-3">
                <label for="SearchPhrase" class="control-label">Search News</label>
                <input type="text" name="SearchPhrase" class="form-control" placeholder="What are you looking for?" required />
            </div>
            <div class="form-group mb-4">
                <input type="submit" value="Search News" class="btn-sm btn-outline-secondary btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Back to News Feed</a>
</div>
